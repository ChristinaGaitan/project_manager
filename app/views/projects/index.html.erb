<p id="notice" class="text-green-500"><%= notice %></p>

<h1 class="text-3xl font-bold underline mb-4">Listing projects</h1>


<table class="min-w-full table-auto border-collapse border border-gray-200">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left border-b border-gray-300">Name</th>
      <th class="px-4 py-2 text-left border-b border-gray-300"></th>
      <th class="px-4 py-2 text-left border-b border-gray-300"></th>
      <th class="px-4 py-2 text-left border-b border-gray-300"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <tr class="hover:bg-gray-50">
      <td class="px-4 py-2 border-b border-gray-300"><%= project.name %></td>
      <td class="px-4 py-2 border-b border-gray-300"><%= link_to 'Show', project, class: 'text-blue-500 hover:underline' %></td>
      <td class="px-4 py-2 border-b border-gray-300"><%= link_to 'Edit', edit_project_path(project), class: 'text-blue-500 hover:underline' %></td>
      <td class="px-4 py-2 border-b border-gray-300"><%= link_to 'Destroy', project, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Project', new_project_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>