<p id="notice" class="text-green-500"><%= notice %></p>

<h1 class="text-3xl font-bold underline mb-4">Project</h1>

<p class="mb-4">
  <b class="font-semibold">Name:</b> <%= @project.name %>
</p>



<div class="mt-4">
  <%= link_to 'Edit', edit_project_path(@project), class: 'text-blue-500 hover:underline' %> |
  <%= link_to 'Destroy', @project, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %> |
  <%= link_to 'Back', projects_path, class: 'text-blue-500 hover:underline' %>
</div>

<hr class="my-4">

<h2 class="text-3xl mb-4">Users</h2>

<table class="min-w-full table-auto border-collapse border border-gray-200">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left border-b border-gray-300">User</th>
      <th class="px-4 py-2 text-left border-b border-gray-300"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.users.each do |user| %>
    <tr class="hover:bg-gray-50">
      <td class="px-4 py-2 border-b border-gray-300"><%= link_to user.first_name, user_path(user), class: 'text-blue-500 hover:underline' %></td>
      <td class="px-4 py-2 border-b border-gray-300"><%= link_to 'Remove from project', remove_user_project_path(@project, user_id: user.id), class: 'text-blue-500 hover:underline', data: { turbo_method: :delete, confirm: "Are you sure you want to remove this user from the project?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>