<p id="notice" class="text-green-500"><%= notice %></p>

<p class="mb-2">
  <b class="font-semibold">First name:</b>
  <%= @user.first_name %>
</p>

<p class="mb-2">
  <b class="font-semibold">Last name:</b>
  <%= @user.last_name %>
</p>

<p class="mb-2">
  <b class="font-semibold">Email:</b>
  <%= @user.email %>
</p>

<div class="mt-4">
  <%= link_to 'Edit', edit_user_path(@user), class: 'text-blue-500 hover:underline' %> |
  <%= link_to 'Destroy', @user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %> |
  <%= link_to 'Back', users_path, class: 'text-blue-500 hover:underline' %>
</div>