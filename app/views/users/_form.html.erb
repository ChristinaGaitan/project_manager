<%= form_for @user do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
  <h2 class="font-semibold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  <ul class="list-disc pl-5">
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field mb-4">
  <%= f.label :first_name, class: "block text-gray-700 font-medium" %>
  <%= f.text_field :first_name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
</div>

<div class="field mb-4">
  <%= f.label :last_name, class: "block text-gray-700 font-medium" %>
  <%= f.text_field :last_name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
</div>

<div class="field mb-4">
  <%= f.label :email, class: "block text-gray-700 font-medium" %>
  <%= f.text_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
</div>

<div class="actions">
  <%= f.submit 'Save', class: "bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
</div>
<% end %>