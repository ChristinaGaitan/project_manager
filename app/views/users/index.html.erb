<p id="notice" class="text-green-500"><%= notice %></p>

<h1 class="text-3xl font-bold mb-6">Listing users</h1>

<table class="min-w-full bg-white border border-gray-300 rounded-lg">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left">First name</th>
      <th class="px-4 py-2 text-left">Last name</th>
      <th class="px-4 py-2 text-left">Email</th>
      <th class="px-4 py-2"></th>
      <th class="px-4 py-2"></th>
      <th class="px-4 py-2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr class="border-b hover:bg-gray-50">
      <td class="px-4 py-2"><%= user.first_name %></td>
      <td class="px-4 py-2"><%= user.last_name %></td>
      <td class="px-4 py-2"><%= user.email %></td>
      <td class="px-4 py-2"><%= link_to 'Show', user, class: 'text-blue-500 hover:underline' %></td>
      <td class="px-4 py-2"><%= link_to 'Edit', edit_user_path(user), class: 'text-blue-500 hover:underline' %></td>
      <td class="px-4 py-2"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to 'New User', new_user_path, class: 'bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
</div>